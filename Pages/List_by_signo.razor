@page "/Listbysigno"
@using Data.Models
@using Microsoft.EntityFrameworkCore
@inject vacunaContext vc

<h3 class="titulocantvacuna">Cantidad de personas vacunadas por vacuna</h3>

<br>
<table class="table mb-40">
    <tr>
   @foreach (var s in signos)
    {
        <th>@s</th>
    }
    </tr>
    <tr>
    @foreach (var s in signos)
    {
        <td class="text-center">
            @vacunados.Count(x => x.SignoZodiacal == s)
        </td>
    }
    </tr>
</table>

@code {

    private List<Vacunado> vacunados = null;
    private List<string> signos = new List<string>{
        "Acuario", 
        "Piscis", 
        "Aries", 
        "Tauro", 
        "Geminis", 
        "Cancer", 
        "Leo", 
        "Libra", 
        "Virgo", 
        "Escorpio", 
        "Sagitario", 
        "Capricornio" 
    };
    
    protected override void OnInitialized() {
        vacunados = vc.Vacunados.ToList();
    }
}
